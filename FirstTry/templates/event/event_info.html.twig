{% extends 'base.html.twig' %}

{% block title %}Hello EventController!{% endblock %}

{% block body %}




<h1>{{event.title}}
{% if is_granted("ROLE_ADMIN") %}
    <a href="{{ path ('update_event', {id:event.id})}}">✏️</a>
    <a href="{{ path ('delete_event', {id:event.id})}}">🪦</a>
{% endif %}
</h1>

<h3>Good to know</h3>
    <div>
        <p>Type: {{event.eventType.value}}</p>
        <p>Starts: {{event.dateStart | date("d/m/y H:i")}}</p>
        <p>Ends: {{event.dateEnd | date("d/m/y H:i")}}</p>
        <p>Fee: {{event.fee}}</p>
    </div>
    <h3>About the event</h3>
    <div>
        <p>{{event.description}}</p>
    </div>

<a href="{{ path ('event_subscription', {id:event.id})}}" >Subscribe</a>

{% endblock %}
